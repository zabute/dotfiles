# Set terminal title dynamically for zsh or bash
case $TERM in
  xterm*|rxvt*)
    PROMPT_COMMAND='echo -ne "\033]0;$(pwd)\007"'
    ;;
  *)
    ;;
esac

USE_POWERLINE="true"

source /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# pnpm
export PNPM_HOME="/home/zabute/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

export PATH=$PATH:/usr/local/go/bin

eval "$(starship init zsh)"
source ~/zsh-config

export ANDROID_HOME=$HOME/Android/Sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/platform-tools

cam() {
  setopt local_options nullglob

  files=(~/Videos/rec/*_cam"$1".ts)

  if (( ${#files[@]} == 0 )); then
    echo "No recordings found for cam$1" >&2
    return 1
  fi

  # Run mpv in background but keep display access
  ~/dotfiles/play-live.sh "${files[@]}" &

  # Detach the job so it doesn't stop when you close the terminal
  disown
}



# Turso
export PATH="$PATH:/home/zabute/.turso"
